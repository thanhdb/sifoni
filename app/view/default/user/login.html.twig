{% extends 'default/layout/index.html.twig' %}
{% block content %}
	<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Đăng nhập vào hệ thống</h1>
            <div class="account-wall">
                <img class="profile-img" src="styles/images/Login.jpg"
                    alt="">
                <form class="form-signin" action="" method="post">
                <input type="text" class="form-control" placeholder="Username" name="username" required autofocus>
                <input type="password" class="form-control" placeholder="Password" name="password" required>
                <input class="btn btn-lg btn-primary btn-block" type="submit" name="action" value="Login"/>
                <label class="checkbox pull-left">
                    <input type="checkbox" value="1">
                    Ghi nhớ tài khoản
                </label>
                <a href="#" class="pull-right need-help">Trợ giúp? </a><span class="clearfix"></span>
                </form>
            </div>
            <a href="#" class="text-center new-account">Tạo tài khoản </a>
        </div>
    </div>
</div>
{% endblock %}
{% block contentleft %}
{% endblock %}
